open Tightening
open Bound_lemma

module ProofTree = struct
  type t = 
    (* tightening, bounds lemmas, children *)
    | Node of Tightening.t list * BoundLemma.t list * t list
    (* tightening, bounds lemmas, contradiction vector *)
    | Leaf of Tightening.t list * BoundLemma.t list * real list

  let non_empty_tightening n = match n with
    | Node ([], _, _) | Leaf ([], _, _) -> false
    | _ -> true

  let get_tightening n = match n with
    | Node (t, _, _) 
    | Leaf (t, _, _) -> t

  let get_children n = 
  match n with
    | Node (_, _, c) -> c
    | Leaf _ -> []
end